@model IEnumerable<LaboratorioArlissonMenacho.Models.PlanoDeSaude>

@{
    ViewData["Title"] = "Listar";
}
@*esse é do Json*@
<h2>Listar</h2>

<p>
    <a asp-action="Novo" class="btn btn-default">Criar Novo Plano</a>
</p>
<table class="table">
    <thead>
        <tr>           
            <th>
                @Html.DisplayNameFor(model => model.RazaoSocial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RazaoSocial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
           
        </tr>
}
    </tbody>
</table>
