@model IEnumerable<Montadora_Arlisson_Menacho.Models.Cidade>

@{
    ViewData["Title"] = "Listar";
}

<h2>Lista de Cidades</h2>

<p>
    <a asp-action="Novo">Cadastrar Nova Cidade</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>           
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <a href="/Cidade/Alterar/@item.Id" class="btn btn-warning">Editar</a>
                <a href="/Cidade/Excluir/@item.Id" class="btn btn-danger">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
