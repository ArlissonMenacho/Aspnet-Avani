@model IEnumerable<LaboratorioArlissonMenacho.Models.PlanoDeSaude>

@{
    ViewData["Title"] = "Lista";
}

<h2>Lista</h2>

<p>
    <a asp-action="Novo" class="btn btn-default">Criar Novo Plano</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PlanoDeSaudeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RazaoSocial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PlanoDeSaudeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RazaoSocial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                <a href="/PlanoDeSaude/Alterar/@item.PlanoDeSaudeId" class="btn btn-warning">Editar</a>
                <a href="/PlanoDeSaude/Excluir/@item.PlanoDeSaudeId" class="btn btn-danger">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
