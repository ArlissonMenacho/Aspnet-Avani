@model IEnumerable<Montadora_Arlisson_Menacho.Models.Montador>

@{
    ViewData["Title"] = "Lista";
}

<h2>Lista de Montadores</h2>

<p>
    <a asp-action="Novo" class="btn btn-default">Cadastrar Montador</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Salario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cpf)
            </th>            
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Salario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cpf)
            </td>            
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <a href="/Montador/Alterar/@item.Id" class="btn btn-warning">Editar</a>
                <a href="/Montador/Excluir/@item.Id" class="btn btn-danger">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
